---
export interface Props {
  photo?: string;
  name: string;
  title: string;
}
const { photo = "https://picsum.photos/400?random=1", name, title } = Astro.props as Props;
---

<div class="card">
    <div class="picture">
        <img src={photo} alt="">
    </div>
    <div class="content">
        <div class="name">{name}</div>
        <div class="title">{title}</div>
    </div>
</div>

<style>
    .card {
        max-width: max-content;
        padding-bottom: 1rem;
        
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .picture {
        width: 20rem;
        height: 20rem;
        overflow: hidden;
    }
    .content {
        background-color: white;
        border: solid 1px black;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: -4rem;
        padding: 0.5rem 0rem 0.5rem 0rem;
        width: 18rem;
    }
    .content:hover {
        transition-timing-function: ease-out;
        transition-delay: 0.09s;
        transform: translate(0px, -20px) 4s;
        scale: 1.15;
    }
    .name {
        font-size: 2rem;
    }
    .title {
        margin-top: -0.25rem;
        color: gray;
    }
</style>