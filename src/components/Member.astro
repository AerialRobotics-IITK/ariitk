---
export interface Props {
  photo?: string;
  name: string;
  title: string;
}
const { photo = "https://picsum.photos/400?random=1", name, title } = Astro.props as Props;
---

<div class="card">
    <div class="picture">
        <img src={photo} alt="">
    </div>
    <div class="content">
        <div class="name">{name}</div>
        <div class="title">{title}</div>
    </div>
</div>

<style>
    .card {
        max-width: max-content;
        padding-bottom: 1rem;
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .picture {
        box-shadow: 0 2px 10px rgb(0 0 0 / 0.8);
        max-width: 20rem;
        max-height: 20rem;
        overflow: hidden;
        border-radius: 1rem;
    }
    .content {
        background-color: white;
        border: solid 1px black;
        border-radius: 5px;
        display: flex;
        flex-direction: column;
        align-items: center;
        margin-top: -4rem;
        padding: 0.5rem 0rem 0.5rem 0rem;
        width: 18rem;
    }
    .content:hover {
        transition-timing-function: ease-out;
        transform: translate(0px, -10px);
        scale: 1.15;
    }
    .name {
        font-size: 2rem;
    }
    .title {
        margin-top: -0.25rem;
        color: gray;
    }
    @media (max-width: 600px) {
        .card {
            margin-left: -2rem;
        }
        .content {
            padding: 0rem;
        }
        .name {
            font-size: 1.5rem;
        }
        .title {
            font-size: 0.5rem;
        }
    }
</style>