---
import { Image, Picture } from '@astrojs/image/components';
export interface Props { photo?: string; name: string; title: string; }

const { photo = "https://picsum.photos/400?random=1", name, title, } = Astro.props as Props;
---

<div class="card">
  <div class="picture">
    <!--Local image with multiple sizes and formats-->
    <Picture src={photo} widths={[30, 20, 300]} aspectRatio="4:5" sizes="(max-width: 35vh) 100vw, 35vh" formats={['avif', 'jpeg', 'png', 'webp']} alt="cool dude ikyk" />
  </div>
  <div class="content">
    <div class="name">{name}</div>
    <!-- <div class="title">{title}</div> -->
  </div>
</div>

<style>
  .card {
    max-width: max-content;
    padding-bottom: 1rem;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .picture {
    box-shadow: 0 2px 10px rgb(0 0 0 / 0.8);
    max-width: 18rem;
    max-height: 18rem;
    overflow: hidden;
    border-radius: 1rem;
  }

  .content {
    background-color: white;
    border: solid 1px black;
    border-radius: 5px;
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: -2rem;
    padding: 0.5rem 0rem 0.5rem 0rem;
    width: 18rem;
  }
  .name {
    font-size: 2rem;
  }
  .title {
    margin-top: -0.25rem;
    color: gray;
  }
  @media (max-width: 600px) {
    .card {
      margin-left: -2rem;
    }
    .picture {
      height: auto;
      /* width: 75%; */
    }
    .content {
      padding: 0rem;
      width: 75%;
    }
  }
</style>
