---
export interface Props {
  heading?: string;
  text?: string;
  showPicture?: boolean;
  backgroundPic?: string;
}

const {
  heading = "Aerial Robotics IITK",
  text = "We build drones so you don't have to",
  showPicture = true,
  backgroundPic = "",
} = Astro.props as Props;
---

<section class="showcase">
  <div class="video-container">
    {
      showPicture ? (
        <>
          <img src={backgroundPic} alt="" />
        </>
      ) : (
        <>
          <video autoplay muted loop>
            <source src={backgroundPic} type="video/mp4" />
          </video>
        </>
      )
    }
    <div class="showcase-text">
      <h1>{heading}</h1>
      <!-- <p>{text}</p> -->
    </div>
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Black+Ops+One&display=swap");
  /* Showcase */
  .showcase {
    margin-top: -2rem;
    margin-bottom: 3rem;
    height: auto;
    /* background-color: var(--color-secondary); */
    /* -webkit-mask-image: linear-gradient(to bottom, rgba(0,0,0,0.1) 0%,rgba(0,0,0,1) 70%); */
    font-family: "Black Ops One", cursive;
  }

  .showcase-text {
    height: 60vh;
    /* padding-top: 11rem; */
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center; /* Align vertical */
    position: relative;
    max-width: 1300px;
    color: rgb(255, 255, 255);
    text-align: center;
    margin: auto;
  }

  .showcase h1 {
    box-shadow: 0 2px 10px rgb(0 0 0 / 0.8);
    text-decoration: double;
    padding: 0rem 1rem;
    font-size: 100px;
    margin-bottom: 20px;
  }

  .showcase p {
    font-size: 24px;
    margin-bottom: 20px;
  }

  .showcase-img {
    text-align: center;
  }

  .showcase-img img {
    border-radius: 10px;
    margin: auto;
  }

  .showcase-demo {
    text-align: center;
    font-weight: 300;
  }

  /* Video */
  .video-container {
    z-index: -2;
    height: 60vh;
    width: 100%;
    position: relative;
    background-color: black;
  }

  .video-container video {
    width: 100%;
    height: 100%;
    position: absolute;
    object-fit: cover;
    z-index: -1;
    opacity: 0.8; /* ! */
  }

  .video-container img {
    width: 100%;
    height: 100%;
    position: absolute;
    object-fit: cover;
    z-index: -1;
    opacity: 0.8; /* ! */
  }

  /* Just styling the content of the div, the *magic* in the previous rules */
  .video-container .caption {
    position: relative;
    text-align: center;
    justify-content: center;
    color: #dc0000;
  }

  @media (max-width: 800px) {
    .showcase-text {
      scale: 0.6;
    }
  }
</style>
