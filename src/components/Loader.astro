---
import LogoLight from '/symmetric_logo_light-07.png'
import LogoDark from '/symmetric_logo_dark-07-08.png'
import LogoBlack from '/symmetric_logo_black-09.png'
import LogoWhite from '/symmetric_logo_white-10.png'
export interface Props {
    height?:string,
    speed?:string,
    type?:string,
    rotate?:boolean
}
let Logo;
const {rotate = true, height = "30vh", speed = "2000ms", type = "white"} = Astro.props as Props;
if (type == "white") {
    Logo = LogoWhite;
} else if (type == "black") {
    Logo = LogoBlack;
} else if (type == "dark") {
    Logo = LogoDark;
} else if (type == "light") {
    Logo = LogoLight;
}
---

<div class={`logo-spinner ${rotate && "spinner"}`}>
    <img src={Logo} alt="">
</div>

<style define:vars={{ height, speed }}>
    .logo-spinner > img {
        border-radius: 50%;
        width: var(--height);
    }
    
    @keyframes spin {
        to {transform:rotate(360deg);}
    }

    .spinner > img {
        animation: spin var(--speed) infinite;
    }

    .logo-spinner > img:hover {
        animation: spin var(--speed) infinite;
    }
</style>