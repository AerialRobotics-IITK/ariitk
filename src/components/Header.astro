<script>
  import $ from 'jquery';
  $(window).on("scroll",function() {
  if ($(document).scrollTop() > 100) {
    $('.header').addClass('color-change');
    $('.logo').addClass('logo-new');
    $('.dropbtn').addClass('color-change');
    $('.dropdown-content').addClass('color-change-dropdown');
  } else {
    $('.header').removeClass('color-change');
    $('.logo').removeClass('logo-new');
    $('.dropbtn').removeClass('color-change');
    $('.dropdown-content').removeClass('color-change-dropdown');
  }
});
</script>

<script>
  /* When the user clicks on the button,
toggle between hiding and showing the dropdown content */
document.querySelector(".dropbtn").addEventListener("click", myFunction);

function myFunction() {
  document.querySelector("#myDropdown").classList.toggle("show");
  document.querySelector(".dropbtn").classList.toggle("dropbtn-focus")
}

// Close the dropdown menu if the user clicks outside of it
window.onclick = function(event) {
  if (!event.target.matches('.dropbtn')) {
    var dropdowns = document.getElementsByClassName("dropdown-content");
    var i;
    for (i = 0; i < dropdowns.length; i++) {
      var openDropdown = dropdowns[i];
      if (openDropdown.classList.contains('show')) {
        openDropdown.classList.remove('show');
      }
    }
  }
}
</script>